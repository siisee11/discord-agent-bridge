{
  "name": "@siisee11/discode",
  "version": "0.1.1",
  "description": "Bridge AI agent outputs to Discord via Claude Code hooks and tmux",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "discode": "./bin/discode"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsup",
    "build:watch": "tsup --watch",
    "prepare": "npm run build",
    "start": "node dist/index.js",
    "pages:dev": "vite",
    "pages:build": "vite build",
    "pages:preview": "vite preview",
    "pages:deploy": "vite build && wrangler pages deploy ./dist-site --project-name=discode-landing",
    "setup:opencode-plugin": "tsx scripts/setup-opencode-plugin.ts",
    "build:release:binaries": "bun run scripts/build-binaries.ts",
    "build:release:binaries:single": "bun run scripts/build-binaries.ts --single",
    "build:release:npm": "node scripts/build-npm-package.mjs",
    "build:release": "npm run build:release:binaries && npm run build:release:npm",
    "pack:release": "node scripts/pack-release.mjs",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "discord",
    "ai-agent",
    "claude-code",
    "tmux",
    "bridge"
  ],
  "author": "",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "optionalDependencies": {
    "@siisee11/discode-darwin-arm64": "0.1.1",
    "@siisee11/discode-darwin-x64": "0.1.1",
    "@siisee11/discode-darwin-x64-baseline": "0.1.1",
    "@siisee11/discode-linux-arm64": "0.1.1",
    "@siisee11/discode-linux-arm64-musl": "0.1.1",
    "@siisee11/discode-linux-x64": "0.1.1",
    "@siisee11/discode-linux-x64-baseline": "0.1.1",
    "@siisee11/discode-linux-x64-musl": "0.1.1",
    "@siisee11/discode-linux-x64-baseline-musl": "0.1.1",
    "@siisee11/discode-windows-x64": "0.1.1",
    "@siisee11/discode-windows-x64-baseline": "0.1.1"
  },
  "engines": {
    "bun": ">=1.3.0"
  },
  "dependencies": {
    "@opentui/core": "^0.1.77",
    "@opentui/solid": "^0.1.77",
    "@types/yargs": "^17.0.35",
    "chalk": "^5.3.0",
    "discord.js": "^14.14.1",
    "dotenv": "^16.4.5",
    "solid-js": "^1.9.9",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^7.1.5",
    "vitest": "^4.0.18"
  }
}
