{
  "name": "discode",
  "version": "0.1.0",
  "description": "Bridge AI agent outputs to Discord via Claude Code hooks and tmux",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "discode": "./dist/bin/discode.js"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsup",
    "start": "node dist/index.js",
    "pages:dev": "vite",
    "pages:build": "vite build",
    "pages:preview": "vite preview",
    "pages:deploy": "vite build && wrangler pages deploy ./dist-site --project-name=discode-landing",
    "setup:opencode-plugin": "tsx scripts/setup-opencode-plugin.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "discord",
    "ai-agent",
    "claude-code",
    "tmux",
    "bridge"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "bun": ">=1.3.0"
  },
  "dependencies": {
    "@opentui/core": "^0.1.77",
    "@opentui/solid": "^0.1.77",
    "@types/yargs": "^17.0.35",
    "chalk": "^5.3.0",
    "discord.js": "^14.14.1",
    "dotenv": "^16.4.5",
    "solid-js": "^1.9.9",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^7.1.5",
    "vitest": "^4.0.18"
  }
}
